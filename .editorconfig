root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.go,Makefile,.gitmodules,go.mod,go.sum}]
indent_style = tab
indent_size = 4

[*.{md,json}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
